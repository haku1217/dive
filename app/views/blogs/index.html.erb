<h1>Listing Blogs</h1>
<%= image_tag('/home.png') %>
<div id="new-blog-link">
  <%= link_to '新しくブログを投稿する', new_blog_path %>
</div>
<p><%= notice %></p>
<p class="bottom">新しいブログを作成できます！</p>
<% @blogs.each do |blog| %>
  <div class="col-xs-12 col-md-6 blog-panel">
    <h2><%= blog.title %></h2>
    <p><%= blog.content %></p>
    <div class="blog-links">
      <%= link_to '詳細', blog, class: 'btn btn-default' %>
      <%= link_to '編集', edit_blog_path(blog), class: 'btn btn-info' %> |
      <%= link_to '削除',blog,method: :delete,data:{confirm:'Are you sure?'}, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
